Algoritmo "Lista2Exerc01"
var
   numero:inteiro
inicio

   escreval("Digite o número")
   leia(numero)
   se numero mod 2 = 0 entao
      escreval("O número é par")
   senao
      escreval("O número é impar")
   fimse
   se numero >= 0 entao
      escreval("O número é positivo")
   senao
      escreval("O número é negativo")
   fimse

fimalgoritmo
